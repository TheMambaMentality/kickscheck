<h2>投稿一覧（管理者）</h2>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>ユーザー名</th>
      <th>タイトル</th>
      <th>コメント数</th>
      <th>作成日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.user.name %></td>
        <td><%= link_to post.title, post_path(post), target: "_blank" %></td>
        <td><%= post.comments.count %></td>
        <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
        <td>
          <%= link_to "削除", admin_post_path(post), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>