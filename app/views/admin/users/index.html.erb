<h2>ユーザー一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>登録日</th>
      <th>状態</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= user.is_deleted? ? "退会済" : "有効" %></td>
        <td>
          <% unless user.is_deleted? %>
            <%= link_to "退会させる", admin_user_path(user), method: :delete, data: { confirm: "本当に退会させますか？" }, class: "btn btn-sm btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>