<div class="container mt-4">

  <!-- 🔸トップビジュアル画像（画面横幅いっぱい） -->
  <%= image_tag "top_icon.png", alt: "KicksCheck Visual", class: "img-fluid mb-4", style: "max-width: 100%; height: auto; max-height: 300px;" %>

  <p>バスケットボールシューズのレビューサイトへようこそ！</p>

  <%= link_to "投稿一覧へ", posts_path, class: "btn btn-primary mb-3" %>

  <h2>新着Post</h2>
  <div class="row">
    <% @recent_posts.each do |post| %>
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <% if post.images.attached? %>
            <% image = post.images.first %>
            <%= image_tag image.variant(resize_to_limit: [300, 300]).processed, class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
            <p class="card-text"><%= truncate(post.content, length: 50) %></p>
            <p class="card-text text-muted"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>