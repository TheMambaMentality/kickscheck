<div class="container mt-3">
  <% if flash[:notice] %>
    <div id="flash-message" class="alert alert-success"><%= flash[:notice] %></div>
  <% elsif flash[:alert] %>
    <div id="flash-message" class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>
</div>

<!-- ãƒ¡ã‚¤ãƒ³è¡¨ç¤º -->
