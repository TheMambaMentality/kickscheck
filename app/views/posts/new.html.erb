<h2>新しい投稿を作成</h2>

<%= form_with(model: @post, url: posts_path, local: true) do |f| %>
  <div>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, required: true %>
  </div>

  <div>
    <%= f.label :content, "内容" %>
    <%= f.text_area :content, required: true %>
  </div>

  <div>
    <%= f.submit "投稿する" %>
  </div>
<% end %>

<%= link_to "投稿一覧へ戻る", posts_path %>